sourcesContent":["<template>\r\n  <section class=\"produtos-container\">\r\n    Total de produtos {{ produtosTotal }}\r\n    <div v-if=\"produtos.length > 0\" class=\"produtos\">\r\n      <div v-for=\"(produto, index) in produtos\" :key=\"index\" class=\"produto\">\r\n        <router-link to=\"/\">\r\n          <img\r\n            v-if=\"produto.fotos\"\r\n            :src=\"produto.fotos[0].src\"\r\n            :alt=\"produto.fotos[0].titulo\"\r\n          />\r\n          <p class=\"preco\">{{ produto.preco }}</p>\r\n          <h2 class=\"titulo\">{{ produto.nome }}</h2>\r\n          <p class=\"descricao\">{{ produto.descricao }}</p>\r\n        </router-link>\r\n      </div>\r\n    </div>\r\n    <div v-else-if=\"produtos.length === 0\">\r\n      <p class=\"sem-resultados\">Busca sem resultados.</p>\r\n    </div>\r\n  </section>\r\n</template>\r\n\r\n<script>\r\nimport { api } from \"@/services.js\";\r\nimport { serialize } from \"@/helpers.js\";\r\n\r\nexport default {\r\n  name: \"ProdutosLista\",\r\n  data() {\r\n    return {\r\n      produtos: null,\r\n      produtosPorPagina: 9,\r\n      produtosTotal: 0,\r\n    };\r\n  },\r\n  computed: {\r\n    url() {\r\n      const query = serialize(this.$route.query);\r\n      return `/produto?_limit=${this.produtosPorPagina}${query}`;\r\n    },\r\n  },\r\n  methods: {\r\n    getProdutos() {\r\n      api.get(this.url).then((r) => {\r\n        this.produtosTotal = +r.headers[\"x-total-count\"];\r\n        console.log(r);\r\n        this.produtos = r.data;\r\n      });\r\n    },\r\n  },\r\n  watch: {\r\n    url() {\r\n      this.getProdutos();\r\n    },\r\n  },\r\n  created() {\r\n    this.getProdutos();\r\n  },\r\n};\r\n</script>\r\n<style scoped>\r\n.produtos-container {\r\n  max-width: 1000px;\r\n  margin: 0 auto;\r\n}\r\n.produtos {\r\n  display: grid;\r\n  grid-template-columns: repeat(3, 1fr);\r\n  grid-gap: 30px;\r\n  margin: 30px;\r\n}\r\n\r\n.produto {\r\n  box-shadow: 0 4px 8px rgba(30, 60, 90, 0.1);\r\n  padding: 